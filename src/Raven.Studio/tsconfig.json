{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "declaration": false,
    "sourceMap": true,
    "target": "es6", 
    "skipLibCheck": true,
    "module": "amd",
    "lib": [
      "webworker",
      "DOM",
      "es6",
      "scripthost"  
    ],
    "typeRoots": [
        "./typings/**/*"
    ]
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
